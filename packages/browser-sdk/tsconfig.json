{
  "extends": "@bucketco/tsconfig/library",
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["src", "test", "dev"],
  "typeRoots": ["./node_modules/@types", "./types"]
}
